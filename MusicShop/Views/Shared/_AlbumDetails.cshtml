@model MusicShop.ViewModels.AlbumViewModel

@{
    ViewBag.Title = "Album Details";
}

<div>
    <img style="width:400px;height:228px;" alt="Image Not Available" src="@Model.Album.CoverUrl" />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Album.Title)</dt>
        <dd>@Html.DisplayFor(model => model.Album.Title)</dd>
        <dt>Artist</dt>
        <dd>@Html.DisplayFor(model => model.Artist.Name)</dd>
        <dt>Genre</dt>
        <dd>@Html.DisplayFor(model => model.Genre.Name)</dd>
        <dt>@Html.DisplayNameFor(model => model.Album.Year)</dt>
        <dd>@Html.DisplayFor(model => model.Album.Year)</dd>
    </dl>

    <table class="table table-hover table-striped table-condensed">
        <thead>
        <tr>
            <th>Track Number</th>
            <th>SongTitle</th>
            <th>Length</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Album.Tracks.Count > 0)
        {
            foreach (var track in Model.Album.Tracks)
            {
                <tr>
                    <td>@track.Number</td>
                    <td>@track.SongTitle</td>
                    <td>@track.Length</td>
                </tr>
            }
        }
        else
        {
            <tr><td>No Track Data</td></tr>
        }
        </tbody>
    </table>
</div>


